* {
  box-sizing: border-box;
}

body {
  margin: 0;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
  background: #0f1115;
  color: #f5f7fb;
}

.container {
  max-width: 960px;
  margin: 0 auto;
  padding: 24px;
}

header {
  margin-bottom: 20px;
}

.controls {
  display: flex;
  gap: 12px;
  align-items: center;
  flex-wrap: wrap;
  margin-bottom: 12px;
}

.controls input {
  flex: 1;
  padding: 10px;
  border-radius: 8px;
  border: 1px solid #2a2f3a;
  background: #151924;
  color: #f5f7fb;
}

button {
  padding: 10px 16px;
  border-radius: 8px;
  border: none;
  background: #4c6fff;
  color: white;
  cursor: pointer;
}

button:disabled {
  background: #3a4151;
  cursor: not-allowed;
}

.status {
  display: flex;
  gap: 24px;
  margin-bottom: 16px;
}

.panel {
  background: #151924;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 16px;
}

.log {
  max-height: 260px;
  overflow-y: auto;
}

.log-item {
  padding: 8px 0;
  border-bottom: 1px solid #232836;
}

.log-item.user {
  color: #9ed0ff;
}

.log-item.assistant {
  color: #c1f7c9;
}

.sources {
  white-space: pre-wrap;
  color: #d1d6e0;
}

.source {
  padding: 8px 0;
  border-bottom: 1px solid #232836;
}
